      <string name="path" value="./data/cbox/leftwall2.obj"/>

      <bsdf type="Diffuse">
        <color name="albedo" value="0.630 0.065 0.05"/>
      </bsdf>
    </shape>
    <shape type="Mesh">
      <string name="path" value="./data/cbox/light.obj"/>

      <light type="MeshLight">
        <color name="radiance" value="15 15 15"/>
      </light>
      <bsdf type="Diffuse"/>

    </shape>

